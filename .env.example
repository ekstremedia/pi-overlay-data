# Pi-Overlay-Data Configuration

# Data output directory
DATA_DIR=./data

# Update interval in seconds
CACHE_DURATION=60

# ===== BARENTSWATCH (Ship Tracking) =====
BARENTSWATCH_ENABLED=true
BARENTSWATCH_CLIENT_ID=your_email@example.com:app_name
BARENTSWATCH_CLIENT_SECRET=your_secret_here

# How far back to look for ships (hours)
LOOKBACK_HOURS=3

# How long ships stay visible after leaving zone (minutes)
# Prevents rapid blinking in timelapse
PERSIST_MINUTES=10

# ===== AURORA (Northern Lights) =====
# TODO: Not yet implemented
AURORA_ENABLED=false

# ===== TIDES (Water Level) =====
# TODO: Not yet implemented
TIDES_ENABLED=false
