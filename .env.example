# Pi-Overlay-Data Configuration

# Data output directory
DATA_DIR=./data

# Update interval in seconds
CACHE_DURATION=60

# ===== BARENTSWATCH (Ship Tracking) =====
BARENTSWATCH_ENABLED=true
BARENTSWATCH_CLIENT_ID=your_email@example.com:app_name
BARENTSWATCH_CLIENT_SECRET=your_secret_here

# How far back to look for ships (hours)
LOOKBACK_HOURS=3

# How long ships stay visible after leaving zone (minutes)
# Prevents rapid blinking in timelapse
PERSIST_MINUTES=10

# ===== AURORA (Northern Lights) =====
# Set to true to enable aurora data fetching
AURORA_ENABLED=false

# Aurora API URL
# AURORA_API_URL=https://ekstremedia.no/api/pi/aurora

# Cache file name (stored in DATA_DIR)
# AURORA_CACHE_FILE=aurora.json

# How often to refresh aurora data from API (minutes)
# AURORA_CACHE_MINUTES=5

# ===== TIDES (Water Level) =====
# Set to true to enable tide data fetching
TIDES_ENABLED=false

# Tide API URL (defaults to Sortland tide data)
# TIDES_API_URL=https://ekstremedia.no/api/pi/tide

# Cache file name (stored in DATA_DIR)
# TIDES_CACHE_FILE=tide.json

# How often to refresh tide data from API (hours)
# API returns 24h of data, so refresh every 6h to ensure future high/low times are always available
TIDES_CACHE_HOURS=6
