[Unit]
Description=Pi-Overlay-Data Service
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=pi
Group=pi
WorkingDirectory=/home/pi/pi-overlay-data
ExecStart=/home/pi/pi-overlay-data/venv/bin/python /home/pi/pi-overlay-data/run.py --loop
Restart=always
RestartSec=30

Environment=PYTHONUNBUFFERED=1

StandardOutput=journal
StandardError=journal
SyslogIdentifier=pi-overlay-data

[Install]
WantedBy=multi-user.target
